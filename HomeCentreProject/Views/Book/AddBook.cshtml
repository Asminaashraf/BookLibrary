@model BookCentreProject.ViewModel.BookViewModel
@{
    ViewBag.Title = "Create Book";
}

<div class="container">
    <div class="row">
        <div class="col-6 offset-3">
            <h3 class="text-center text-info mt-4">Create Book List </h3>
            <form method="post" asp-action="AddBook" enctype="multipart/form-data">
                <div class="mt-3">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" placeholder="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>

                </div>
                <div class="mt-3">
                    <label asp-for="Author"></label>
                    <input asp-for="Author" placeholder="Author Name" class="form-control" />
                    <span asp-validation-for="Author" class="text-danger"></span>

                </div>
                <div class="mt-3">
                    <label asp-for="Language"></label>
                    <input asp-for="Language" placeholder="Language" class="form-control" />
                    <span asp-validation-for="Language" class="text-danger"></span>

                </div>
                <div class="mt-3">
                    <label asp-for="Price"></label>
                    <input asp-for="Price" placeholder="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>

                </div>
                <div class="mt-3">
                    <select asp-for="Type" class="form-control"  asp-items="Html.GetEnumSelectList<BookType>()">
                        <option value="">Select Type</option>
                    </select>

                </div>
                <div class="mt-3">
                    <label asp-for="Image"></label>
                    <input asp-for="Image"  class="form-control "   />
                    <span asp-validation-for="Image" class="text-danger"></span>

                </div>
                <div class="mt-4">
                    <input type="submit" value="Create" class="btn btn-primary " />
                    <a asp-controller="Book" asp-action="GetBooks" class="btn btn-primary float-end">Back To Page</a>
                </div>
             
              
            </form>

        </div>

    </div>

</div>