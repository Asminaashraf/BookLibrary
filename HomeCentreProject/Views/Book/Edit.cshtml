@model BookCentreProject.ViewModel.BookEditViewModel
@{
    ViewBag.Title = "Edit";
   
    
}

<div class="container">
    <div class="row">
        <div class="col-6 offset-3">
            <h3 class="text-center text-info mt-4">Edit Book Record </h3>
            <form method="post" asp-action="Edit" enctype="multipart/form-data">
                <input hidden asp-for="Id" />
                <input hidden asp-for="ExistingImage" />
                <div class="mt-3">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" placeholder="Name" class="form-control" />
                    
                    <span asp-validation-for="Name" class="text-danger"></span>

                </div>
                <div class="mt-3">
                    <label asp-for="Author"></label>
                    <input asp-for="Author" placeholder="Author Name" class="form-control" />
                    <span asp-validation-for="Author" class="text-danger"></span>

                </div>
                <div class="mt-3">
                    <label asp-for="Language"></label>
                    <input asp-for="Language" placeholder="Language" class="form-control" />
                    <span asp-validation-for="Language" class="text-danger"></span>

                </div>
                <div class="mt-3">
                    <label asp-for="Price"></label>
                    <input asp-for="Price" placeholder="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>

                </div>

                <div class="mt-3">
                    <select asp-for="Type" class="form-control" asp-items="Html.GetEnumSelectList<BookType>()">
                        <option value="">Select Type</option>
                    </select>

                </div>
                <div class="row">
                    <div class="col-8 mt-3">
                        <label asp-for="Image"></label>
                        <input type="file" asp-for="Image" class="form-control " id="ChooseImg"  />
                        <span asp-validation-for="Image" class="text-danger"></span>

                    </div>
                    <div class="col-4 mt-4">
                        <img src="/images/@Model.ExistingImage" style="height:100px;width:100px;border:1px solid;border-radius:10px;padding:10px" id="PrevImg" asp-append-version="true" />

                    </div>
                   
                    

                </div>
               
                <div class="mt-4 ">
                    <input type="submit" value="Submit" class="btn btn-primary " />
                    <a asp-controller="Book" asp-action="GetBooks" class="btn btn-primary float-end">Cancel</a>
                </div>


            </form>

        </div>

    </div>

